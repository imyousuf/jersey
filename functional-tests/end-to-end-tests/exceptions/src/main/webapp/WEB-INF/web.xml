<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <servlet>
        <servlet-name>Jersey Web Application</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>com.sun.jersey.qe.tests.errormapping</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Jersey Web Application</servlet-name>
        <url-pattern>/webresources/*</url-pattern>
    </servlet-mapping>
    <error-page>
        <exception-type>java.lang.SecurityException</exception-type>
        <location>/SecurityExceptionErrorPage.jsp</location>
    </error-page>
    <!--
    <error-page>
        <exception-type>com.sun.jersey.api.container.MappableContainerException</exception-type>
        <location>/MappableContainerException.jsp</location>
    </error-page>
    -->
    <error-page>
        <exception-type>java.io.IOException</exception-type>
        <location>/CheckedException.jsp</location>
    </error-page>
    <error-page>
        <exception-type>com.sun.jersey.qe.tests.errormapping.MyResource$MyException</exception-type>
        <location>/CheckedException.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/NotFound.jsp</location>
    </error-page>
</web-app>
